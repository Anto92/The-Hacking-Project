<h1>Event</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Event's Name</th>
      <th>Creator</th>  
      <th>Date</th>
      <th>Description</th>  
      <th>Place</th>     
    </tr>
  </thead>

  <tbody>
      <tr>
          <td> <%= @event.name %> </td>
          <td> <%= @event.creator.name %> </td>  
          <td> <%= @event.date %> </td>
          <td> <%= @event.description%> </td>  
          <td> <%=@event.place %> </td>                     
      </tr>
  </tbody>
</table>



<div>
      <h1>
        Attending users
      </h1>
<table class="table table-striped table-hover">
    <tbody>
    <tr>
        <th>Name</th>
        <th>Email</th>
    </tr>
    <% @event.attendees.each do |guest|%>
    <tr>
        <td> <%= guest.name %> </td>
        <td> <%= guest.email %> </td>
    </tr>
    <% end %>
    </tbody>
</table>
</div>

<p> <%= link_to "All Events", events_index_path %> </p>

