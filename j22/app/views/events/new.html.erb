<h1>New Event</h1>

<div class="row">
    <%= form_for @event, url: {action: "create"} do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :date %>
      <%= f.date_field :date %>

      <%= f.label :place %>
      <%= f.text_field :place %>

      <%= f.submit "Create a new event", class: "btn btn-primary" %>
    <% end %>
  </div>