<!-- ONE PRODUCT -->  
  <div class="container">
	<% User.find(current_user.id).cart.items.each do |i| %>
    <div class="row">
      <div class="col-md-4 product">
        <%= image_tag(i.image_url, :class => "img-fluid") %>
      </div>
      <div class="col-md-8 info">
        <div class="info-wrapper">
          <h2><%= i.title %></h2>
          <p class="lead">
            <%= i.description %>
          </p>
          <p class="price lead"><%= i.price %></p>
          <div class="btn-group" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-outline-secondary"><i class="icon-android-remove"></i></button>
            <input type="text" value="1" class="quantity">
            <button type="button" class="btn btn-outline-secondary"><i class="icon-android-add"></i></button>
          </div>   
          <a href="#" class="add-to-cart btn btn-danger">Retirer<i class="icon-cart-1"></i></a>
        </div> <!-- end wrapper -->
      </div>  <!-- end col-md-8 -->
  	</div> <!-- end Row -->
	<% end %>
</div>  <!-- END container -->
<!-- END ONE PRODUCT -->

